<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuickQuote.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuickQuote.Maui"
    xmlns:views="clr-namespace:QuickQuote.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="QuickQuote.Maui">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    
    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"></ShellContent>
    
    <ShellContent
        Title="Quote Form"
        ContentTemplate="{DataTemplate views:QuoteForm}"
        Route="QuoteForm"></ShellContent>
    
    <ShellContent
        Title="Quote Result"
        ContentTemplate="{DataTemplate views:QuoteResults}"
        Route="QuoteResult"></ShellContent>

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="Settings"></ShellContent>
</Shell>
